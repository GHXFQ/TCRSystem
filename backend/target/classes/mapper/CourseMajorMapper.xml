<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tcr.system.mapper.CourseMajorMapper">

    <!-- 根据课程ID获取专业ID列表 -->
    <select id="getMajorIdsByCourseId" resultType="java.lang.Long">
        SELECT major_id FROM course_major WHERE course_id = #{courseId} AND deleted = 0
    </select>
    
    <!-- 根据专业ID获取课程ID列表 -->
    <select id="getCourseIdsByMajorId" resultType="java.lang.Long">
        SELECT course_id FROM course_major WHERE major_id = #{majorId} AND deleted = 0
    </select>
    
</mapper> 